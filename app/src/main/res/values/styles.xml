<resources>

	<style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:fontFamily">@font/montserrat</item>
		<item name="textColor1">@color/colorTextPrimary</item>
		<item name="textColor2">@color/colorTextSecondary</item>
		<item name="backgroundColor1">@color/pastBackgroundColor</item>
		<item name="backgroundColor2">@color/weekendBackgroundColor</item>
		<item name="backgroundColor3">@color/futureBackgroundColor</item>

		<item name="weekViewPastBackgroundColor">#dddddd</item>
		<item name="weekViewWeekendBackgroundColor">@color/colorBackground</item>
		<item name="weekViewHeaderTextColor">@color/colorTextPrimary</item>
		<item name="weekViewHeaderBackgroundColor">@color/white</item>
		<item name="weekViewEventTextColor">@color/colorTextPrimary</item>
		<item name="weekViewDividerLineColor">@color/colorTextSecondary</item>
	</style>

	<style name="BottomNavigationTextActive" parent="Widget.MaterialComponents.BottomNavigationView">
		<item name="android:fontFamily">@font/montserrat_bold</item>
		<item name="android:textSize">10sp</item>
	</style>

	<style name="BottomNavigationTextInactive" parent="Widget.MaterialComponents.BottomNavigationView">
		<item name="android:fontFamily">@font/montserrat</item>
		<item name="android:textSize">10sp</item>
	</style>

</resources>
