		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/imageColor10"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:src="@drawable/ic_circle"
			app:layout_constraintBottom_toTopOf="@+id/imageColor1"
			app:layout_constraintDimensionRatio="1:1"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@+id/imageColor9"
			app:tint="@color/color10" />

		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/imageColor11"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:src="@drawable/ic_circle"
			app:layout_constraintBottom_toTopOf="@+id/imageColor10"
			app:layout_constraintDimensionRatio="1:1"
			app:layout_constraintEnd_toStartOf="@+id/imageColor12"
			app:layout_constraintStart_toStartOf="parent"
			app:tint="@color/color11" />


		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/imageColor12"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:src="@drawable/ic_circle"
			app:layout_constraintBottom_toTopOf="@+id/imageColor10"
			app:layout_constraintDimensionRatio="1:1"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintEnd_toStartOf="@+id/imageColor13"
