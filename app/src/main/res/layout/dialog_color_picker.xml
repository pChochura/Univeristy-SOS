			app:layout_constraintBottom_toTopOf="@+id/imageColor15"
			app:layout_constraintDimensionRatio="1:1"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintEnd_toStartOf="@+id/imageColor20"
