			app:layout_constraintBottom_toTopOf="@+id/imageColor15"
			app:layout_constraintDimensionRatio="1:1"
			app:layout_constraintEnd_toStartOf="@+id/imageColor17"
			app:layout_constraintStart_toStartOf="parent"
			app:tint="@color/color16" />


		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/imageColor17"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:src="@drawable/ic_circle"
			app:layout_constraintBottom_toTopOf="@+id/imageColor15"
			app:layout_constraintDimensionRatio="1:1"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintEnd_toStartOf="@+id/imageColor18"
			app:layout_constraintStart_toEndOf="@+id/imageColor16"
			app:tint="@color/color17" />

		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/imageColor18"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:src="@drawable/ic_circle"
			app:layout_constraintBottom_toTopOf="@+id/imageColor15"
			app:layout_constraintDimensionRatio="1:1"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintEnd_toStartOf="@+id/imageColor19"
			app:layout_constraintStart_toEndOf="@+id/imageColor17"
			app:tint="@color/color18" />

		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/imageColor19"
			android:layout_width="0dp"
			android:layout_height="0dp"
