<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="15dp"
	xmlns:app="http://schemas.android.com/apk/res-auto"

	>

	<androidx.appcompat.widget.AppCompatTextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="16dp"
		android:gravity="center|top"
		android:text="Choose Color"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		android:id="@+id/colorTitle"
		android:textSize="30sp"
		android:textColor="@color/colorTextPrimary"/>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/colorTitle">

		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/imageColor1"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:src="@drawable/ic_circle"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintDimensionRatio="1:1"
			app:layout_constraintEnd_toStartOf="@+id/imageColor2"
			app:layout_constraintStart_toStartOf="parent"
			app:tint="@color/color1" />


		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/imageColor2"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:src="@drawable/ic_circle"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintDimensionRatio="1:1"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintEnd_toStartOf="@+id/imageColor3"
			app:layout_constraintStart_toEndOf="@+id/imageColor1"
			app:tint="@color/color2" />

		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/imageColor3"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:src="@drawable/ic_circle"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintDimensionRatio="1:1"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintEnd_toStartOf="@+id/imageColor4"
			app:layout_constraintStart_toEndOf="@+id/imageColor2"
			app:tint="@color/color3" />

		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/imageColor4"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:src="@drawable/ic_circle"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintDimensionRatio="1:1"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintEnd_toStartOf="@+id/imageColor5"
			app:layout_constraintStart_toEndOf="@+id/imageColor3"
			app:tint="@color/color4" />

		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/imageColor5"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:src="@drawable/ic_circle"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintDimensionRatio="1:1"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@+id/imageColor4"
			app:tint="@color/color5" />

		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/imageColor6"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:src="@drawable/ic_circle"
			app:layout_constraintBottom_toTopOf="@+id/imageColor1"
			app:layout_constraintDimensionRatio="1:1"
			app:layout_constraintEnd_toStartOf="@+id/imageColor7"
			app:layout_constraintStart_toStartOf="parent"
			app:tint="@color/color6" />


		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/imageColor7"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:src="@drawable/ic_circle"
			app:layout_constraintBottom_toTopOf="@+id/imageColor1"
			app:layout_constraintDimensionRatio="1:1"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintEnd_toStartOf="@+id/imageColor8"
